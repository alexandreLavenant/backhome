include ./head.pug

link(rel="stylesheet" href="/static/css/config.css")

.container
	.row
		.col-xl-12.col-lg-12.col-md-12
		
			br
		
			form(action="/" method="post")
				.form-check
					h3 Activate Music
						#toggles
							input(type="checkbox" name="enable" id="checkbox1" class="ios-toggle" checked=enable)
							label(for="checkbox1" class="checkbox-label" data-off="off" data-on="on")

				h3 Which Music ?
				each music in musicMorning
					.input-group(style="margin-top : 5px;")
							span(class="input-group-addon") Morning
							input(class="form-control" type="text" name="musicMorning[]" placeholder="Youtube ID" value=music)
							span(class="input-group-btn")
								button(class="btn btn-primary playNow" type="button") Play
							span(class="input-group-btn" style="margin-left : 5px;")
								button(class="btn btn-danger removeMusic" type="button") -
				
				br
				
				button(class="btn btn-success float-right addMusic" type="button") Music Morning +
				
				br
				br

				each music in musicEvening
					.input-group(style="margin-top : 5px;")
							span(class="input-group-addon") Evening
							input(class="form-control" type="text" name="musicEvening[]" placeholder="Youtube ID" value=music)
							span(class="input-group-btn")
								button(type="button" class="btn btn-primary playNow") Play
							span(class="input-group-btn" style="margin-left : 5px;")
								button(class="btn btn-danger removeMusic" type="button") -
				
				br
				
				button(class="btn btn-success float-right addMusic" type="button") Music Evening +
				
				br
				br
				br
				
				button(type="submit" class="btn btn-danger float-right") Save

include ./footer.pug
script(src="/static/js/config.js")
script(src="/static/js/loadSW.js")
